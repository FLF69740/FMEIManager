<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controllers.navigationPackageG.ProfileFragment"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/guideline_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <ImageView
            android:id="@+id/fragment_profile_photo_aera"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/blank_profile_picture"
            app:layout_constraintBottom_toTopOf="@+id/fragment_profile_desactivation"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/fragment_profile_desactivation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorAccentDark"
            android:text="@string/profile_section_profile_desactivation"
            android:textColor="@color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/guideline_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/fragment_profile_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:hint="@string/profile_section_function_hint"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/background_light"
            android:textColorHint="@color/colorAccentDark"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_profile_desactivation"
            app:layout_constraintStart_toStartOf="@+id/guideline_vertical"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_forname" />

        <TextView
            android:id="@+id/fragment_profile_forname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/profile_section_forname_hint"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/background_light"
            android:textColorHint="@color/colorAccentDark"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_profile_function"
            app:layout_constraintStart_toStartOf="@+id/fragment_profile_function"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_name" />

        <TextView
            android:id="@+id/fragment_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/profile_section_name_hint"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/background_light"
            android:textColorHint="@color/colorAccentDark"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_profile_forname"
            app:layout_constraintStart_toStartOf="@+id/fragment_profile_forname"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_main_participant" />

        <Button
            android:id="@+id/fragment_profile_main_participant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/accentdark_border_table"
            android:text="@string/profile_section_main_profile"
            android:textColor="@color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/fragment_profile_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_profile_photo_aera"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_profile_mail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_section_mail"
            android:textColor="@color/background_light"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_profile_tel_title"
            app:layout_constraintStart_toStartOf="@+id/fragment_profile_tel_title"
            app:layout_constraintTop_toTopOf="@+id/guideline_up" />

        <TextView
            android:id="@+id/fragment_profile_mail_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:hint="@string/profile_section_mail_hint"
            android:textColorHint="@color/colorAccentDark"
            android:textColor="@color/background_light"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_mail_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_profile_mail_title"
            app:layout_constraintTop_toTopOf="@+id/fragment_profile_mail_title" />

        <TextView
            android:id="@+id/fragment_profile_tel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:text="@string/profile_section_tel"
            android:textColor="@color/background_light"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_middle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_mail_title" />

        <TextView
            android:id="@+id/fragment_profile_tel_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/background_light"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_tel_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/fragment_profile_mail_information"
            app:layout_constraintTop_toTopOf="@+id/fragment_profile_tel_title" />

        <TextView
            android:id="@+id/fragment_profile_fmea_participation_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@color/colorPrimaryDark"
            android:paddingBottom="10dp"
            android:text="@string/profile_section_fmea_participation_title"
            android:textColor="@color/background_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_middle" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_profile_recycler_view_participation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fragment_profile_fmea_participation_title"
            app:layout_constraintStart_toStartOf="@+id/fragment_profile_fmea_participation_title"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_fmea_participation_title" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>