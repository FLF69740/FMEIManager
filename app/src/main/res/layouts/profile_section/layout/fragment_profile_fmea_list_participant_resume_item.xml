<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dip"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/fragment_profile_fmea_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/profile_section_fmea_participation_title"
        android:textColor="@color/background_light"
        app:layout_constraintEnd_toStartOf="@+id/fragment_profile_isleader_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_profile_isleader_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorAccentDark"
        android:text="@string/profile_section_team_leader_mention"
        android:textColor="@color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_fmea_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_profile_fmea_item" />

</android.support.constraint.ConstraintLayout>