<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.navigationPackageA.riskTheme.RiskPhotoViewPagerActivity"
    android:background="@color/colorPrimaryDark">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerRiskPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/closePhotoViewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:alpha="0.7"
        android:clickable="true"
        android:focusable="true"
        android:padding="10sp"
        android:text="@string/Process_viewpager_close"
        android:textColor="@android:color/holo_purple"
        app:layout_constraintBottom_toBottomOf="@+id/photoViewPagerSaveAndQuit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/photoViewPagerSaveAndQuit" />

    <TextView
        android:id="@+id/photoViewPagerSaveAndQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/holo_purple_border_table"
        android:padding="10dp"
        android:text="@string/photo_viewpager_save_and_quit"
        android:textColor="@android:color/holo_purple"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>