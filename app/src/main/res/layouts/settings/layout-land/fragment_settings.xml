<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controllers.navigationPackageC.SettingsFragment"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/settings_guideline_vertical_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <android.support.constraint.Guideline
            android:id="@+id/settings_guideline_vertical_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <android.support.constraint.Guideline
            android:id="@+id/settings_guideline_vertical_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <android.support.constraint.Guideline
            android:id="@+id/settings_guideline_horizontal_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <android.support.constraint.Guideline
            android:id="@+id/settings_guideline_horizontal_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <android.support.constraint.Guideline
            android:id="@+id/settings_guideline_horizontal_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />


        <ImageView
            android:id="@+id/frament_settings_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/accentdark_border_table"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/settings_guideline_vertical_2"
            app:layout_constraintStart_toStartOf="@+id/settings_guideline_vertical_1"
            app:layout_constraintTop_toTopOf="@+id/settings_guideline_horizontal_1" />

        <TextView
            android:id="@+id/textview_business_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/Settings_business_title"
            android:textColor="@color/background_light"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/settings_guideline_vertical_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/settings_guideline_horizontal_3" />

        <TextView
            android:id="@+id/fragment_settings_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="@string/Settings_business_hint"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/background_light"
            android:textColorHint="@color/colorAccentDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textview_business_title"
            app:layout_constraintStart_toStartOf="@+id/textview_business_title"
            app:layout_constraintTop_toBottomOf="@+id/textview_business_title" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorAccentDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/settings_guideline_vertical_3"
            app:layout_constraintStart_toStartOf="@+id/settings_guideline_vertical_3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_score_ladder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/Settings_score_ladder"
            android:textColor="@color/background_light"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/settings_guideline_vertical_3"
            app:layout_constraintTop_toTopOf="@+id/settings_guideline_horizontal_1" />

        <TextView
            android:id="@+id/textview_score_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/Settings_score_low"
            android:textColor="@color/background_light"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/settings_guideline_vertical_3"
            app:layout_constraintTop_toTopOf="@+id/settings_guideline_horizontal_2" />

        <TextView
            android:id="@+id/fragment_settings_low_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:text="100"
            android:textColor="@color/green_low_score"
            app:layout_constraintEnd_toEndOf="@+id/textview_score_low"
            app:layout_constraintStart_toStartOf="@+id/textview_score_low"
            app:layout_constraintTop_toBottomOf="@+id/textview_score_low" />

        <TextView
            android:id="@+id/textview_score_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/Settings_score_medium"
            android:textColor="@color/background_light"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textview_score_high"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/settings_guideline_vertical_3"
            app:layout_constraintTop_toBottomOf="@+id/textview_score_low" />

        <TextView
            android:id="@+id/fragment_settings_medium_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:text="150"
            android:textColor="@color/orange_medium_score"
            app:layout_constraintEnd_toEndOf="@+id/textview_score_medium"
            app:layout_constraintStart_toStartOf="@+id/textview_score_medium"
            app:layout_constraintTop_toBottomOf="@+id/textview_score_medium" />

        <TextView
            android:id="@+id/textview_score_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/Settings_score_high"
            android:textColor="@color/background_light"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_settings_high_score"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/settings_guideline_vertical_3" />

        <TextView
            android:id="@+id/fragment_settings_high_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:text="200"
            android:textColor="@color/red_high_score"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textview_score_high"
            app:layout_constraintStart_toStartOf="@+id/textview_score_high" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>